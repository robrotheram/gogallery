                         center: [{{ .Picture.Exif.GPS.Lng }}, {{ .Picture.Exif.GPS.Lat }}], // starting position [lng, lat]
                    zoom: 10 // starting zoom
                    });
               </script>
          </div>
          {{end}}
     </div>
</div>
{{end}}